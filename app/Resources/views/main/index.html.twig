{% extends       'base.html.twig' %}

{% block body %}

{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}

<div class="row">
    <div class="col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-sm-10 col-md-10 col-lg-10">
    
        <h3>Выбрать язык <small>Русский | Английский</small></h3>
    
        <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'table_caption.country'|trans }}</th>
            <th>{{ 'table_caption.city'|trans }}</th>
            <th>{{ 'table_caption.street'|trans }}</th>
            <th>{{ 'table_caption.home'|trans }}</th>
            <th>{{ 'table_caption.zipcode'|trans }}</th>
            <th><span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span> {{ 'table_caption.date'|trans }}</th>
        </tr>
        <tr>
            <td></td>
            <td></span></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for result in results %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ result.city.country.name }}</td>
            <td>{{ result.city.name }}</td>
            <td>{{ result.street }}</td>
            <td>{{ result.home }}</td>
            <td>{{ result.zipcode }}</td>
            <td>{{ result.createdAt|date("d.m.Y H:i") }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">{{ 'result.results_not_found'|trans }}</td>
        </tr>
        {% endfor %}
        </tbody>
        </table>

        <div class="navigation text-center">
            {#{ pagerfanta(results, 'twitter_bootstrap3_translated', { routeName: 'blog_index_paginated' }) }#}
        </div>
    </div>
    <div class="col-sm-1 col-md-1 col-lg-1"></div>
</div>
{% endblock %}

{% block stylesheets %}
<style></style>
{% endblock %}
